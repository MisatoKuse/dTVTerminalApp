<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nttdocomo.android.tvterminalapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="">

        <!-- ====================================== Home グループ Begin ====================================== -->
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.home.HomeActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.home.ClipListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.home.RecommendActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.home.RecordedListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.home.RecordReservationListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.home.WatchingVideoListActivity"
            android:screenOrientation="portrait" />
        <!-- ======================================  Home グループ End ====================================== -->


        <!-- ===================================== Launch グループ Begin ===================================== -->
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.launch.DAccountReSettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.launch.DAccountSettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.launch.DAccountSettingHelpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.launch.LaunchActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.launch.STBConnectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.launch.STBParingInvitationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.launch.STBSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.launch.TutorialActivity"
            android:screenOrientation="portrait" />
        <!-- ======================================  Launch グループ End ====================================== -->


        <!-- ====================================== Other グループ Begin ====================================== -->
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.other.NewsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.other.NewsDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.other.RemoteControlActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.other.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.other.SettingDetailActivity"
            android:screenOrientation="portrait" />
