        <!-- ====================================== Player グループ Begin ====================================== -->
        <activity android:name="com.nttdocomo.android.tvterminalapp.activity.player.ChannelDetailPlayerActivity" />
        <activity android:name="com.nttdocomo.android.tvterminalapp.activity.player.RecordedVideoPlayerActivity" />
        <activity android:name="com.nttdocomo.android.tvterminalapp.activity.player.TvPlayerActivity" />
        <activity android:name="com.nttdocomo.android.tvterminalapp.activity.player.VideoPlayerActivity" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.player.RecommendPlayerActivity"
            android:launchMode="singleTop" />
        <!-- ======================================  Player グループ End ====================================== -->


        <!-- ====================================== Ranking グループ Begin ====================================== -->
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.ranking.DailyTvRankingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.ranking.RankingTopActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.ranking.VideoRankingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.ranking.WeeklyTvRankingActivity"
            android:screenOrientation="portrait" />
        <!-- ======================================  Ranking グループ End ====================================== -->


        <!-- ====================================== Search グループ Begin ====================================== -->

        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.search.SearchTopActivity"
            android:screenOrientation="portrait" />
        <!-- ======================================  Search グループ End ====================================== -->


        <!-- ====================================== TvProgram グループ Begin ====================================== -->
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.tvprogram.ChannelListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.tvprogram.MyChannelEditActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.tvprogram.TvProgramListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.tvprogram.WeekTvProgramListActivity"
            android:screenOrientation="portrait" />
        <!-- ======================================  TvProgram グループ End ====================================== -->


        <!-- ====================================== Video グループ Begin ====================================== -->
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.video.VideoContentListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.video.VideoSubGenreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nttdocomo.android.tvterminalapp.activity.video.VideoTopActivity"
            android:screenOrientation="portrait" />
        <!-- ======================================  Video グループ End ====================================== -->

        <activity android:name="com.nttdocomo.android.tvterminalapp.activity.temp.DAccountAppliActivity" />
        <activity android:name="com.nttdocomo.android.tvterminalapp.activity.temp.GoogleStoreActivity" />
        <activity android:name="com.nttdocomo.android.tvterminalapp.activity.launch.DAccountRegConfirmationActivity"/>
