<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nttdocomo.android.tvterminalapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- ====================================== Home グループ Begin ====================================== -->
        <activity
            android:name=".activity.home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.home.ClipListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.home.RecommendActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.home.RecordedListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.home.RecordReservationListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.home.RentalListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.home.WatchingVideoListActivity"
            android:screenOrientation="portrait" />
        <!-- ======================================  Home グループ End ====================================== -->


        <!-- ===================================== Launch グループ Begin ===================================== -->
        <activity
            android:name=".activity.launch.DAccountReSettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.launch.DAccountSettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.launch.DAccountSettingHelpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.launch.LaunchActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.launch.STBConnectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.launch.STBParingInvitationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.launch.STBSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.launch.TutorialActivity"
            android:screenOrientation="portrait" />
        <!-- ======================================  Launch グループ End ====================================== -->


        <!-- ====================================== Other グループ Begin ====================================== -->
        <activity
            android:name=".activity.other.NewsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.other.NewsDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.other.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.other.SettingDetailActivity"
            android:screenOrientation="portrait" />
        <!-- ======================================  Other グループ End ====================================== -->


        <!-- ====================================== Player グループ Begin ====================================== -->
        <activity android:name=".activity.player.ChannelDetailPlayerActivity" />
        <activity android:name=".activity.player.RecordedVideoPlayerActivity" />
        <activity
            android:name=".activity.player.DtvContentsDetailActivity"
            android:configChanges="keyboardHidden|keyboard|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.player.VideoPlayerActivity" />
        <activity
            android:name=".activity.player.RecommendPlayerActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.digion.dixim.android.activation.ActivationActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Activation"
            android:theme="@style/DiximPlayerPanelTheme"></activity>
        <!-- ======================================  Player グループ End ====================================== -->


        <!-- ====================================== Ranking グループ Begin ====================================== -->
        <activity
            android:name=".activity.ranking.DailyTvRankingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ranking.RankingTopActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ranking.VideoRankingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ranking.WeeklyTvRankingActivity"
            android:screenOrientation="portrait" />
        <!-- ======================================  Ranking グループ End ====================================== -->


        <!-- ====================================== Search グループ Begin ====================================== -->

        <activity
            android:name=".activity.search.SearchTopActivity"
            android:screenOrientation="portrait" />
        <!-- ======================================  Search グループ End ====================================== -->


        <!-- ====================================== TvProgram グループ Begin ====================================== -->
        <activity
            android:name=".activity.tvprogram.ChannelListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.tvprogram.MyChannelEditActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.tvprogram.TvProgramListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.tvprogram.WeekTvProgramListActivity"
            android:screenOrientation="portrait" />
        <!-- ======================================  TvProgram グループ End ====================================== -->


        <!-- ====================================== Video グループ Begin ====================================== -->
        <activity
            android:name=".activity.video.VideoContentListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.video.VideoTopActivity"
            android:screenOrientation="portrait" />
        <!-- ======================================  Video グループ End ====================================== -->

        <activity android:name=".activity.temp.DAccountAppliActivity" />
        <activity android:name=".activity.temp.GoogleStoreActivity" />
        <activity android:name=".activity.launch.DAccountRegConfirmationActivity" />
        <activity android:name=".activity.other.SettingDownloadLocation"></activity>
    </application>

</manifest>