<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/home_main_layout_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FF0000">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="週間番組表画面"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="戻る"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="週間番組表縮小版へ"
        android:id="@+id/btn_mode"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="チャンネル詳細情報"
        android:id="@+id/btn_channel_info" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="番組詳細情報画面へ"
        android:id="@+id/btn_tv_info" />

    <Button
        android:id="@+id/btn_video_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="録画予約ダイアログ表示" />



</LinearLayout>