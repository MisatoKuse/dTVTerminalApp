<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/edit_my_channel_list_item_no"
		android:layout_width="@dimen/edit_my_channel_list_item_no_width"
		android:layout_height="@dimen/edit_my_channel_list_item_no_height"
		android:layout_centerVertical="true"
		android:background="@color/item_num_black">

		<TextView
			android:id="@+id/edit_my_channel_list_item_no_tv"
			android:layout_width="@dimen/edit_my_channel_list_item_no_tv_width"
			android:layout_height="@dimen/edit_my_channel_list_item_no_tv_width"
			android:layout_centerInParent="true"
			android:textSize="12dp"
			android:gravity="center"/>
	</RelativeLayout>
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/edit_my_channel_list_item_no"
		android:layout_alignTop="@id/edit_my_channel_list_item_no"
		android:layout_toEndOf="@id/edit_my_channel_list_item_no"
		android:background="@drawable/my_ch_item_bottom_line">

		<Button
			android:id="@+id/edit_my_channel_list_item_edit_bt"
			android:layout_width="@dimen/edit_my_channel_list_item_add_btn_width"
			android:layout_height="@dimen/edit_my_channel_list_item_add_btn_width"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:layout_marginEnd="@dimen/edit_my_channel_list_item_add_btn_margin_right"/>

		<TextView
			android:id="@+id/edit_my_channel_list_item_channel_name_tv"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_toStartOf="@id/edit_my_channel_list_item_edit_bt"
			android:gravity="center_vertical"
			android:maxLines="2"
			android:ellipsize="end"
			android:textColor="@color/white_text"
			android:textSize="@dimen/edit_my_channel_list_item_text_size"/>

	</RelativeLayout>
</RelativeLayout>