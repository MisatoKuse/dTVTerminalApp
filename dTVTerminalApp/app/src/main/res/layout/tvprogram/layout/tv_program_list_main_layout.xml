<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <HorizontalScrollView
        android:id="@+id/tv_program_list_main_layout_tab_hs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:foregroundGravity="center_horizontal"
        android:scrollbars="none" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_program_list_main_layout_tab_hs"
        android:splitMotionEvents="false">

        <ImageView
            android:id="@+id/tv_program_list_main_layout_curtime_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:contentDescription="@null"
            android:padding="10dp"
            android:scaleType="fitCenter" />

        <com.nttdocomo.android.tvterminalapp.view.ProgramScrollView
            android:id="@+id/tv_program_list_main_layout_time_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_program_list_main_layout_curtime_iv"
            android:scrollbars="none" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tv_program_list_main_layout_channel_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_program_list_main_layout_curtime_iv"
            android:scrollbars="none" />

        <com.nttdocomo.android.tvterminalapp.view.ProgramScrollView
            android:id="@+id/tv_program_list_main_layout_channeldetail_sl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_program_list_main_layout_channel_rv"
            android:layout_toEndOf="@id/tv_program_list_main_layout_time_sl"
            android:scrollbars="none">

            <com.nttdocomo.android.tvterminalapp.view.ProgramRecyclerView
                android:id="@+id/tv_program_list_main_layout_channeldetail_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:divider="#ffff0000"
                android:dividerHeight="10dp"
                android:fadingEdge="none"
                android:fadingEdgeLength="0dp"
                android:overScrollMode="never" />
        </com.nttdocomo.android.tvterminalapp.view.ProgramScrollView>

	    <RelativeLayout
		    android:id="@+id/tv_program_list_main_layout_time_line"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/tv_program_list_main_layout_channel_rv">
		    <View
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:layout_centerInParent="true"
			    android:background="@color/tv_program_list_time_line_now"/>
		    <ImageView
			    android:id="@+id/tv_program_list_main_layout_time_line_now"
			    android:layout_width="@dimen/tv_program_list_time_line_width"
			    android:layout_height="@dimen/tv_program_list_time_line_height"
			    android:layout_centerVertical="true"
			    android:layout_marginStart="@dimen/tv_program_list_time_scrollview_width"
			    android:background="@mipmap/timeline_now"/>
	    </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_program_list_main_layout_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:text="@string/tv_program_tip"
        android:visibility="gone"/>
</RelativeLayout>
