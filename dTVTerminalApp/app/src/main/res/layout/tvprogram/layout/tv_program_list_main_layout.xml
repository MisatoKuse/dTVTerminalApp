<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_program_list_root_view_bg">

	<RelativeLayout
		android:id="@+id/rl_tv_program_list_tab"
		android:layout_width="match_parent"
		android:layout_height="@dimen/tab_layout_area_program_list_height"
		android:background="@color/program_list_tab_background_color"
		android:visibility="visible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_tv_program_list_tab"
        android:splitMotionEvents="false">

        <ImageView
            android:id="@+id/tv_program_list_main_layout_curtime_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/tv_program_list_cur_time_btn_bg"
            android:contentDescription="@null"
            android:padding="@dimen/tv_program_list_cur_time_padding"
            android:scaleType="fitCenter" />

        <com.nttdocomo.android.tvterminalapp.view.ProgramScrollView
            android:id="@+id/tv_program_list_main_layout_time_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_program_list_main_layout_curtime_iv"
            android:scrollbars="none" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tv_program_list_main_layout_channel_rv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tv_program_channel_height"
            android:layout_toEndOf="@id/tv_program_list_main_layout_curtime_iv"
            android:scrollbars="none" />

        <com.nttdocomo.android.tvterminalapp.view.ProgramScrollView
            android:id="@+id/tv_program_list_main_layout_channeldetail_sl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_program_list_main_layout_channel_rv"
            android:layout_toEndOf="@id/tv_program_list_main_layout_time_sl"
            android:scrollbars="none">

            <com.nttdocomo.android.tvterminalapp.view.ProgramRecyclerView
                android:id="@+id/tv_program_list_main_layout_channeldetail_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:fadingEdgeLength="0dp"
                android:overScrollMode="never" />
        </com.nttdocomo.android.tvterminalapp.view.ProgramScrollView>

	    <RelativeLayout
		    android:id="@+id/tv_program_list_main_layout_time_line"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/tv_program_list_main_layout_channel_rv">
		    <View
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/tv_program_list_cur_time_height"
			    android:layout_centerInParent="true"
			    android:background="@color/tv_program_list_time_line_now"/>
		    <ImageView
			    android:id="@+id/tv_program_list_main_layout_time_line_now"
			    android:layout_width="@dimen/tv_program_list_time_line_width"
			    android:layout_height="@dimen/tv_program_list_time_line_height"
			    android:layout_centerVertical="true"
			    android:layout_marginStart="@dimen/tv_program_list_time_scrollview_width"
			    android:background="@mipmap/timeline_now"/>
	    </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_program_list_main_layout_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_text"
        android:layout_centerInParent="true"
        android:text="@string/tv_program_tip"
        android:visibility="gone"/>
</RelativeLayout>
