<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <HorizontalScrollView
        android:id="@+id/tv_program_list_main_layout_tab_hs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:foregroundGravity="center_horizontal"
        android:scrollbars="none" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_program_list_main_layout_tab_hs"
        android:splitMotionEvents="false">

        <ImageView
            android:id="@+id/tv_program_list_main_layout_curtime_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:contentDescription="@null"
            android:padding="10dp"
            android:scaleType="fitCenter" />

        <com.nttdocomo.android.tvterminalapp.model.program.ProgramScrollView
            android:id="@+id/tv_program_list_main_layout_time_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_program_list_main_layout_curtime_iv"
            android:scrollbars="none" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tv_program_list_main_layout_channel_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_program_list_main_layout_curtime_iv"
            android:scrollbars="none" />

        <com.nttdocomo.android.tvterminalapp.model.program.ProgramScrollView
            android:id="@+id/tv_program_list_main_layout_channeldetail_sl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_program_list_main_layout_channel_rv"
            android:layout_toEndOf="@id/tv_program_list_main_layout_time_sl"
            android:scrollbars="none">

            <com.nttdocomo.android.tvterminalapp.model.program.ProgramRecyclerView
                android:id="@+id/tv_program_list_main_layout_channeldetail_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:divider="#ffff0000"
                android:dividerHeight="10dp"
                android:fadingEdge="none"
                android:fadingEdgeLength="0dp"
                android:overScrollMode="never" />
        </com.nttdocomo.android.tvterminalapp.model.program.ProgramScrollView>
    </RelativeLayout>

	<!-- 仕様通りに表示させるため、一時↓のように構成 07/11/13 -->
    <com.nttdocomo.android.tvterminalapp.model.program.ChangeModeActionButton
        android:id="@+id/tv_program_list_main_layout_changemode_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:contentDescription="@null"
            android:src="@mipmap/ic_fiber_manual_record_white_24dp" />

        <TextView
            android:id="@+id/tv_program_list_main_layout_changemode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tv_program_change_mode"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold" />
    </com.nttdocomo.android.tvterminalapp.model.program.ChangeModeActionButton>
</RelativeLayout>
