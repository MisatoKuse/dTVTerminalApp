<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="7dp"
    android:paddingRight="8dp"
    android:paddingTop="12dp">

    <RelativeLayout
        android:id="@+id/tv_program_item_panel_clip_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <TextView
            android:id="@+id/tv_program_item_panel_clip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:textSize="13dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/tv_program_item_panel_clip_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_program_item_panel_clip_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@null"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_circle_opacity_clip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tv_program_item_panel_content_rl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="13">

        <TextView
            android:id="@+id/tv_program_item_panel_content_des_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/tv_program_item_panel_content_thumbnail_iv"
            android:layout_width="122dp"
            android:layout_height="69dp"
            android:layout_below="@id/tv_program_item_panel_content_des_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_program_item_panel_content_detail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="11dp"
            android:layout_below="@id/tv_program_item_panel_content_thumbnail_iv"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>