<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/common_background_color">

	<RelativeLayout
		android:id="@+id/rl_channel_list_tab"
		android:layout_width="match_parent"
		android:layout_height="@dimen/tab_layout_area_channel_list_height"
		android:background="@color/channel_list_tab_background_color"
		android:visibility="visible" />

	<TextView
		android:id="@+id/channel_list_no_items"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/list_no_items_text_left"
		android:layout_marginTop="@dimen/list_no_items_text_top"
		android:layout_below="@id/rl_channel_list_tab"
		android:textColor="@color/white_text"
		android:textSize="@dimen/tab_text_size_14dp"
		android:text="@string/common_empty_data_message"
		android:visibility="gone"/>

	<android.support.v4.view.ViewPager
		android:id="@+id/channel_list_main_layout_channel_body_vp"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/rl_channel_list_tab"/>

</RelativeLayout>