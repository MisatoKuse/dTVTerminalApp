<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000">

	<RelativeLayout
		android:id="@+id/rl_channel_list_tab"
		android:layout_width="match_parent"
		android:layout_height="@dimen/tab_layout_area_channel_list_height"
		android:background="@color/channel_list_tab_background_color"
		android:visibility="visible" />

	<android.support.v4.view.ViewPager
		android:id="@+id/channel_list_main_layout_channel_body_vp"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/rl_channel_list_tab"/>

</RelativeLayout>