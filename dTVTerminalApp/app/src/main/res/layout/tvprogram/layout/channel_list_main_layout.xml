<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/channel_list_background_color">

	<HorizontalScrollView
		android:id="@+id/channel_list_main_layout_channel_titles_hs"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:fillViewport="true"
		android:foregroundGravity="center_horizontal"
		android:scrollbars="none">

		<LinearLayout
			android:id="@+id/channel_list_main_layout_channel_titles_ll"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/rectangele_all"
			android:orientation="horizontal"/>
	</HorizontalScrollView>

	<android.support.v4.view.ViewPager
		android:id="@+id/channel_list_main_layout_channel_body_vp"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/channel_list_main_layout_channel_titles_hs"/>

</RelativeLayout>