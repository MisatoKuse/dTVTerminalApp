<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/check_status_relative_layout"
    style="@style/default_layout_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/check_status_finish_get_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="情報取得完了"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/check_status_finish_get_info"
        android:layout_marginBottom="20dp"
        android:text="　Dアカウントやペアリング状態を確認する仮画面です"
        android:textColor="#ffffff" />

</RelativeLayout>
