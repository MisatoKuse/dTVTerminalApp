<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ranking_list_background">

    <RelativeLayout
        android:id="@+id/genre_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/base_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/genre_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/video_list_item_divider"
        android:dividerHeight="@dimen/video_contents_divider_divider_height">
    </ListView>

</LinearLayout>