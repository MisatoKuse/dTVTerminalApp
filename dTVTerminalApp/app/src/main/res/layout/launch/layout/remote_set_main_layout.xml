<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/default_layout_style"
    android:paddingStart="@dimen/stb_remote_set_start_end"
    android:paddingEnd="@dimen/stb_remote_set_start_end"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stb_remote_set_black_color">

    <ImageView
        android:id="@+id/remote_set_main_layout_iv"
        android:layout_marginTop="@dimen/stb_remote_set_image_margin_top"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:src="@mipmap/startup_icon_06" />

    <TextView
        android:id="@+id/remote_set_main_layout_tv_link"
        android:layout_marginBottom="@dimen/stb_remote_set_tx_margin_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stb_remote_set_link_height"
        android:gravity="center"
        android:text="@string/remote_set_bottom_txt"
        android:textColor="@color/stb_remote_set_white_color"
        android:autoLink="all"
        android:textSize="@dimen/stb_remote_text_size" />

    <TextView
        android:id="@+id/remote_set_main_layout_tv_title"
        android:layout_below="@id/remote_set_main_layout_iv"
        android:layout_marginTop="@dimen/stb_remote_set_title_margin_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remote_set_title"
        android:textColor="@color/stb_remote_set_white_color"
        android:textStyle="bold"
        android:textSize="@dimen/stb_remote_text_size" />

    <TextView
        android:id="@+id/remote_set_main_layout_set_btn"
        android:layout_below="@id/remote_set_main_layout_tv_title"
        android:layout_marginTop="@dimen/stb_remote_set_btn_margin_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stb_remote_set_btn_height"
        android:text="@string/remote_set_bt_txt"
        android:background="@drawable/startup_btn_normal"
        android:textColor="@color/stb_remote_set_black_color"
        android:textSize="@dimen/stb_remote_text_size"
        android:textStyle="bold"
        android:gravity="center"/>

</RelativeLayout>