<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/default_layout_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/stb_icon_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/paring_connecting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/launch_image_bottom_margin"
            android:baselineAlignBottom="true"
            android:src="@drawable/paring_connecting_icon" />

    </RelativeLayout>

    <TextView
        android:id="@+id/connect_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/str_stb_pair_invitation_text"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/launch_text_size"
        android:visibility="visible" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <TextView
            android:id="@+id/useWithoutPairingSTBParingInvitationActivity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/launch_text_layout_high_size"
            android:text="@string/str_stb_no_pair_use_text"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>