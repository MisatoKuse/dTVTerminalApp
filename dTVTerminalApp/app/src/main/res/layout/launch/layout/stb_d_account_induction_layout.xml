<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stb_select_background_color">

    <RelativeLayout
        android:id="@+id/stb_icon_relative_layout_induction"
        android:layout_width="match_parent"
        android:gravity="center|bottom"
        android:layout_height="@dimen/launch_relative_layout_high_size">

        <ImageView
            android:id="@+id/paring_search_image_induction"
            android:layout_width="@dimen/launch_stb_start_up_icon1_width"
            android:layout_height="@dimen/launch_stb_start_up_icon1_high"
            android:layout_marginBottom="@dimen/paring_setting_search_image_margin_top"
            android:baselineAlignBottom="true"
            android:src="@mipmap/startup_icon_04"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    <TextView
        android:id="@+id/stb_select_status_error_text_induction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_stb_paring_result_layout"
        android:text="@string/str_d_account_app_not_install"
        android:textColor="@color/stb_select_white_color"
        android:lineSpacingMultiplier="1.5"
        android:gravity="center"
        android:layout_marginTop="@dimen/launch_stb_text_margin_top"
        android:textStyle="bold"
        android:textSize="@dimen/launch_text_size"
        android:layout_below="@+id/stb_icon_relative_layout_induction"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/d_account_application_download"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:layout_marginBottom="@dimen/launch_stb_list_start_margin"
        android:background="@color/stb_select_white_color"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_above="@+id/use_without_login_induction"
        android:text="@string/str_d_account_app_download"
        android:textColor="@color/stb_select_black_color"
        android:textSize="@dimen/launch_text_size" />

    <TextView
        android:id="@+id/use_without_login_induction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:background="@color/stb_select_white_color"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/str_stb_no_login_use_text"
        android:textColor="@color/stb_select_black_color"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/launch_image_bottom_margin"/>

</RelativeLayout>