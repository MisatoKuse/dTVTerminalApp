<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recorded_contents_background">

    <ListView
        android:id="@+id/recorded_contents_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_searched_result"
        android:divider="@drawable/list_item_divider"
        android:dividerHeight="@dimen/recorded_contents_dividerHeight">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|end">

        <ImageView
            android:id="@+id/item_common_result_sort_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="25dp"
            android:background="@color/thumbnail_background"
            android:contentDescription="@null"
            android:scaleType="center" />
    </LinearLayout>
</RelativeLayout>