<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#FF0000">
        <TextView
            android:id="@+id/titleDAccountRegConfirmationActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_d_account_reg_confirmation_title"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/dAccountLoginYesDAccountRegConfirmationActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dアカウントログイン済 " />

    <Button
        android:id="@+id/dAccountLoginNoDAccountRegConfirmationActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dアカウント未ログイン " />

    <Button
        android:id="@+id/dAccountAppliYesDAccountRegConfirmationActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="端末内にdアカウントアプリがある" />

    <Button
        android:id="@+id/dAccountAppliNoDAccountRegConfirmationActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="端末内にdアカウントアプリがない" />

    <Button
        android:id="@+id/dAccountSameYesDAccountRegConfirmationActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STBに同じdアカウントが登録されている" />

    <Button
        android:id="@+id/dAccountSameNoDAccountRegConfirmationActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STBに同じdアカウントが登録されていない" />

    <Button
        android:id="@+id/returnDAccountRegConfirmationActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="戻る" />

</LinearLayout>
