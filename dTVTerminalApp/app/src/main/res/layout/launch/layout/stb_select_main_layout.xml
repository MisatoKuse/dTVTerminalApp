<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/stb_select_background_color"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_relative_layout_high_size"
        android:id="@+id/stb_icon_relative_layout">
        <ImageView
            android:id="@+id/paring_search_image"
            android:layout_width="@dimen/launch_stb_start_up_icon1_width"
            android:layout_height="@dimen/launch_stb_start_up_icon1_high"
            android:src="@mipmap/paring_search_icon"
            android:baselineAlignBottom="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/launch_image_bottom_margin" />

    </RelativeLayout>
    <TextView
        android:id="@+id/stb_select_status_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_stb_paring_result_layout"
        android:text="@string/str_stb_select_result_text_search"
        android:textColor="@color/stb_select_white_color"
        android:layout_marginStart="@dimen/launch_image_bottom_margin"
        android:layout_marginEnd="@dimen/launch_image_bottom_margin"
        android:gravity="center"
        android:textSize="@dimen/launch_text_size"
        android:layout_below="@+id/stb_icon_relative_layout"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/stb_device_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stb_select_status_text"
        android:layout_marginBottom="@dimen/launch_stb_name_margin_bottom"
        >

        <TextView
            android:id="@+id/stb_select_status_selected_text"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/launch_stb_margin_top"
            android:layout_height="@dimen/launch_text_layout_high_size"
            android:layout_marginRight="@dimen/launch_stb_list_start_margin"
            android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
            android:paddingStart="@dimen/launch_text_left_padding"
            android:paddingEnd="@dimen/launch_text_right_padding"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/stb_device_check_mark"
            android:layout_width="wrap_content"
            android:layout_alignEnd="@+id/stb_select_status_selected_text"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/launch_text_end_padding"
            android:paddingEnd="@dimen/launch_text_left_padding"
            android:layout_marginTop="@dimen/launch_stb_margin_top"
            android:src="@drawable/remote_paring_device_check_mark"
            android:layout_alignBottom="@+id/stb_select_status_selected_text"
            android:layout_alignParentTop="true"
            android:visibility="gone"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/stb_device_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/launch_stb_progress_bar_padding"
        android:layout_below="@+id/stb_device_selected"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/stb_device_name_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/launch_stb_margin_top"
        android:layout_below="@id/stb_device_progress"
        android:layout_above="@+id/checkBoxSTBSelectActivity">
    </ListView>

    <CheckBox
        android:id="@+id/checkBoxSTBSelectActivity"
        android:layout_width="@dimen/launch_stb_checkbox_high"
        android:layout_height="@dimen/launch_stb_checkbox_high"
        android:layout_marginStart="@dimen/launch_stb_checkbox_start_margin"
        android:button="@null"
        android:background="@drawable/ic_check_box_outline_blank_white_24dp"
        android:layout_marginBottom="@dimen/launch_stb_checkbox_bottom_margin"
        android:layout_marginTop="@dimen/launch_stb_checkbox_top_margin"
        android:paddingStart="@dimen/launch_stb_checkbox_right_margin"
        android:paddingEnd="@dimen/launch_text_end_padding"
        android:layout_above="@+id/useWithoutPairingSTBParingInvitation"
        />

    <TextView
        android:id="@+id/launch_select_check_box_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_stb_checkbox_high"
        android:text="@string/str_stb_next_not_display_text"
        android:textSize="@dimen/launch_text_size"
        android:paddingStart="@dimen/launch_stb_checkbox_right_margin"
        android:paddingEnd="@dimen/launch_text_end_padding"
        android:gravity="center|start"
        android:textColor="@color/stb_select_white_color"
        android:layout_toEndOf="@+id/checkBoxSTBSelectActivity"
        android:layout_above="@+id/useWithoutPairingSTBParingInvitation"
        android:layout_marginBottom="@dimen/launch_stb_checkbox_bottom_margin"
        />


    <TextView
        android:id="@+id/useWithoutPairingSTBParingInvitation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:layout_marginBottom="@dimen/launch_stb_list_start_margin"
        android:background="@color/stb_select_white_color"
        android:gravity="center"
        android:text="@string/str_stb_no_pair_use_text"
        android:textColor="@color/stb_select_black_color"
        android:textSize="@dimen/launch_text_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/downloadDAccountApplication"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:layout_marginBottom="@dimen/launch_image_bottom_margin"
        android:background="@color/stb_select_white_color"
        android:gravity="center"
        android:text="@string/str_d_account_app_download"
        android:textColor="@color/stb_select_black_color"
        android:layout_above="@+id/useWithoutPairingSTBParingInvitation"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>