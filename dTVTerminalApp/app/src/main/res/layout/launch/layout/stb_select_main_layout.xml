<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_relative_layout_high_size"
        android:id="@+id/stb_icon_relative_layout">
        <ImageView
            android:id="@+id/paring_search_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/paring_search_icon"
            android:baselineAlignBottom="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/launch_image_bottom_margin" />

    </RelativeLayout>
    <TextView
        android:id="@+id/stb_select_status_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_stb_paring_result_layout"
        android:text="@string/str_stb_select_result_text_search"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="@dimen/launch_text_size"
        android:layout_below="@+id/stb_icon_relative_layout"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/stb_device_name_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stb_select_status_text"
        android:layout_above="@+id/checkBoxSTBSelectActivity">
    </ListView>

    <Button
        android:id="@+id/dAccountLoginYesSTBSelectActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="dアカウントログイン済 "
        android:layout_above="@+id/dAccountLoginNoSTBSelectActivity"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <Button
        android:id="@+id/dAccountLoginNoSTBSelectActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="dアカウント未ログイン "
        android:layout_above="@+id/dAccountAppliYesSTBSelectActivity"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <Button
        android:id="@+id/dAccountAppliYesSTBSelectActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="端末内にdアカウントアプリがある"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <Button
        android:id="@+id/dAccountAppliNoSTBSelectActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="端末内にdアカウントアプリがない"
        android:layout_above="@+id/dAccountSameYesSTBSelectActivity"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <Button
        android:id="@+id/dAccountSameYesSTBSelectActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="STBに同じdアカウントが登録されている"
        android:layout_above="@+id/dAccountSameNoSTBSelectActivity"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <Button
        android:id="@+id/dAccountSameNoSTBSelectActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="STBに同じdアカウントが登録されていない"
        android:layout_above="@+id/checkBoxSTBSelectActivity"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>



    <CheckBox
        android:id="@+id/checkBoxSTBSelectActivity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:text="@string/str_stb_next_not_display_text"
        android:textColor="#FFFFFF"
        android:theme="@style/CheckBox"
        android:layout_marginBottom="@dimen/launch_stb_checkbox_bottom_margin"
        android:layout_marginTop="@dimen/launch_stb_checkbox_top_margin"
        android:layout_above="@+id/useWithoutPairingSTBParingInvitation"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/useWithoutPairingSTBParingInvitation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/str_stb_no_pair_use_text"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>