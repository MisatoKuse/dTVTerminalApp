<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_search_result_device_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:textSize="@dimen/launch_stb_device_font_size"
        android:gravity="center_vertical|start"
        android:background="@drawable/selector_btn_click_bg"
        android:textColor="@drawable/selector_text_click_bg"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:paddingStart="@dimen/launch_text_left_padding"
        android:paddingEnd="@dimen/launch_text_right_padding"
        android:maxLines="1"
        android:ellipsize="end"
        />

</RelativeLayout>