<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tab_show_layout_area"
	android:layout_width="match_parent"
	android:layout_height="51dp"
	android:background="@color/common_tab_background_color"
	android:visibility="gone">

	<HorizontalScrollView
		android:id="@+id/tab_show_layout_scroll_area"
		android:layout_width="match_parent"
		android:layout_height="@dimen/list_tab_scroll_area_height"
		android:background="@color/common_tab_background_color"
		android:paddingTop="@dimen/list_tab_scroll_area_padding_top"
		android:fillViewport="true"
		android:foregroundGravity="center_horizontal"
		android:scrollbars="none">

		<LinearLayout
			android:id="@+id/tab_show_layout_text_area"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:background="@color/common_tab_background_color"
			android:gravity="center"/>
	</HorizontalScrollView>

</RelativeLayout>
