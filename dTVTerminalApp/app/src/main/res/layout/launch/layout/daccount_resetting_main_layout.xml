<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/stb_icon_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_relative_layout_high_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center|bottom">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/paring_search_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stb_select_d_account_setting_icon" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/launch_exclamation_mark_margin"
                android:src="@drawable/exclamation_mark" />
        </FrameLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/d_account_not_registration_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_stb_paring_result_layout"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stb_icon_relative_layout"
        android:gravity="center"
        android:text="@string/str_stb_not_registration_account_message"
        android:textColor="#ffffff"
        android:textSize="@dimen/launch_text_size" />

    <TextView
        android:id="@+id/d_account_registration_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_below="@id/d_account_not_registration_message"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/str_stb_d_account_registration_help"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/d_account_input_activation_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_below="@id/d_account_registration_help"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/str_stb_input_activation_code"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/d_account_again_pairing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_below="@id/d_account_input_activation_code"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/str_stb_again_pairing"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/d_account_login_other_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/str_stb_login_other_account"
        android:textColor="#000000" />

</RelativeLayout>