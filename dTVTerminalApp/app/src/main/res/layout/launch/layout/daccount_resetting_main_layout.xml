<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/stb_select_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/paring_search_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/launch_stb_icon_margin_top_size"
            android:layout_marginBottom="@dimen/launch_image_bottom_margin"
            android:src="@mipmap/startup_icon_04" />

        <TextView
            android:id="@+id/d_account_not_registration_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
            android:layout_marginRight="@dimen/launch_stb_list_start_margin"
            android:text="@string/str_stb_not_registration_account_message"
            android:textColor="@color/stb_select_white_color"
            android:textSize="@dimen/launch_text_size" />


        <TextView
            android:id="@+id/d_account_registration_help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/launch_text_layout_high_size"
            android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
            android:layout_marginTop="@dimen/launch_stb_account_error_margin_top"
            android:layout_marginRight="@dimen/launch_stb_list_start_margin"
            android:background="@drawable/startup_btn_normal"
            android:padding="@dimen/launch_stb_door_text_zero_padding_all"
            android:gravity="center"
            android:text="@string/str_stb_d_account_registration_help"
            android:textColor="@color/stb_select_black_color"
            android:textSize="@dimen/launch_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/d_account_again_pairing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/launch_text_layout_high_size"
            android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
            android:layout_marginTop="@dimen/launch_text_bottom_margin"
            android:layout_marginRight="@dimen/launch_stb_list_start_margin"
            android:background="@drawable/startup_btn_normal"
            android:padding="@dimen/launch_stb_door_text_zero_padding_all"
            android:gravity="center"
            android:text="@string/str_stb_again_pairing"
            android:textColor="@color/list_item_background"
            android:textSize="@dimen/launch_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
            android:layout_marginRight="@dimen/launch_stb_list_start_margin"
            android:layout_marginTop="@dimen/launch_text_bottom_margin"
            android:layout_marginBottom="@dimen/launch_image_bottom_margin">

            <TextView
                android:id="@+id/d_account_login_other_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/launch_text_layout_high_size"
                android:background="@drawable/startup_btn_normal"
                android:padding="@dimen/launch_stb_door_text_zero_padding_all"
                android:gravity="center"
                android:text="@string/str_stb_login_other_account"
                android:textColor="@color/stb_select_black_color"
                android:textSize="@dimen/launch_text_size"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>