<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/default_layout_style"
    android:paddingStart="@dimen/stb_remote_introduce_start_end"
    android:paddingEnd="@dimen/stb_remote_introduce_start_end"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stb_launch_black_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/remote_introduce_main_layout_iv"
                android:layout_marginTop="@dimen/stb_remote_introduce_image_margin_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:src="@mipmap/startup_icon_06" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:maxWidth="@dimen/stb_remote_introduce_logo_width"
                    android:layout_marginTop="@dimen/stb_remote_introduce_logo_margin_top"
                    android:src="@mipmap/logo_hikaritv_square" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/stb_remote_introduce_title_margin_start"
                    android:layout_marginTop="@dimen/stb_remote_introduce_title_margin_top"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remote_introduce_title"
                        android:textStyle="bold"
                        android:textColor="@color/stb_remote_introduce_white_color"
                        android:textSize="@dimen/stb_remote_introduce_title_text_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/stb_remote_introduce_comment_margin_top"
                        android:text="@string/remote_introduce_comment"
                        android:textColor="@color/stb_remote_introduce_comment_color"
                        android:textSize="@dimen/stb_remote_introduce_comment_text_size"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remote_introduce_header_title1"
                android:textColor="@color/stb_remote_introduce_comment_color"
                android:layout_marginTop="@dimen/stb_remote_introduce_title1_margin_top"
                android:layout_marginBottom="@dimen/stb_remote_introduce_picture_margin_top"
                android:textSize="@dimen/stb_remote_introduce_comment_text_size"/>

            <ImageView
                android:id="@+id/remote_introduce_main_layout_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/stb_remote_introduce_picture_margin_top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remote_introduce_header_title2"
                android:textColor="@color/stb_remote_introduce_comment_color"
                android:layout_marginTop="@dimen/stb_remote_introduce_title2_margin_top"
                android:layout_marginBottom="@dimen/stb_remote_introduce_picture_margin_top"
                android:textSize="@dimen/stb_remote_introduce_comment_text_size"/>

            <ImageView
                android:id="@+id/remote_introduce_main_layout_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/stb_remote_introduce_picture_margin_top"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remote_introduce_header_title3"
                android:textColor="@color/stb_remote_introduce_comment_color"
                android:layout_marginTop="@dimen/stb_remote_introduce_title3_margin_top"
                android:layout_marginBottom="@dimen/stb_remote_introduce_picture_margin_top"
                android:textSize="@dimen/stb_remote_introduce_comment_text_size"/>

            <ImageView
                android:id="@+id/remote_introduce_main_layout_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/stb_remote_introduce_picture_margin_top" />

            <TextView
                android:id="@+id/remote_introduce_main_layout_set_btn"
                android:layout_marginTop="@dimen/stb_remote_introduce_set_btn_margin_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stb_remote_introduce_height"
                android:layout_marginStart="@dimen/stb_remote_introduce_set_set_btn_margin_start_end"
                android:layout_marginEnd="@dimen/stb_remote_introduce_set_set_btn_margin_start_end"
                android:text="@string/remote_introduce_bt_txt"
                android:background="@drawable/startup_btn_normal"
                android:textColor="@color/stb_remote_introduce_black_color"
                android:textSize="@dimen/stb_launch_text_size"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/remote_introduce_main_layout_tv_link"
                android:layout_marginTop="@dimen/stb_remote_introduce_set_tx_margin_top"
                android:layout_marginBottom="@dimen/stb_remote_introduce_set_tx_margin_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stb_remote_introduce_height"
                android:gravity="center"
                android:text="@string/remote_introduce_bottom_txt"
                android:textColor="@color/stb_remote_introduce_white_color"
                android:autoLink="all"
                android:textSize="@dimen/stb_launch_text_size" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>