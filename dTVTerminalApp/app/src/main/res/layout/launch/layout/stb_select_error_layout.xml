<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stb_select_background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/paring_search_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/launch_stb_icon_margin_top_size"
            android:layout_marginBottom="@dimen/launch_image_bottom_margin"
            android:src="@mipmap/startup_icon_02" />

        <TextView
            android:id="@+id/stb_select_status_error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
            android:layout_marginRight="@dimen/launch_stb_list_start_margin"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:text="@string/str_stb_select_result_text_failed"
            android:textColor="@color/stb_select_white_color"
            android:textSize="@dimen/launch_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/launch_stb_paring_power_and_wifi_check_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
            android:layout_marginTop="@dimen/launch_stb_paring_wifi_check_margin_top"
            android:layout_marginRight="@dimen/launch_stb_list_start_margin"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:text="@string/str_stb_select_power_and_wifi_check"
            android:textColor="@color/stb_select_white_color"
            android:textSize="@dimen/launch_text_size" />

        <TextView
            android:id="@+id/stb_search_failed_paring_again"
            android:layout_width="match_parent"
            android:layout_height="@dimen/launch_text_layout_high_size"
            android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
            android:layout_marginTop="@dimen/launch_stb_account_error_margin_top"
            android:layout_marginRight="@dimen/launch_stb_list_start_margin"
            android:background="@drawable/startup_btn_normal"
            android:gravity="center"
            android:text="@string/str_stb_again_pairing"
            android:textColor="@color/stb_launch_black_color"
            android:textSize="@dimen/launch_device_search_error_help_button_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
            android:layout_marginTop="@dimen/launch_stb_checkbox_top_margin"
            android:layout_marginRight="@dimen/launch_stb_list_start_margin"
            android:layout_marginBottom="@dimen/launch_image_bottom_margin"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/network_set_help_text_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/launch_text_layout_high_size"
                android:gravity="center"
                android:text="@string/str_stb_select_network_set_help"
                android:textColor="@color/stb_select_white_color"
                android:textSize="@dimen/launch_text_size" />

            <TextView
                android:id="@+id/use_without_paring"
                android:layout_width="match_parent"
                android:layout_height="@dimen/launch_text_layout_high_size"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/str_stb_to_set_later_text"
                android:textColor="@color/stb_select_white_color"
                android:textSize="@dimen/launch_text_size" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
