<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/stb_icon_relative_layout"
        android:layout_width="match_parent"
        android:gravity="center|bottom"
        android:layout_height="@dimen/launch_relative_layout_high_size">

        <ImageView
            android:id="@+id/paring_search_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/launch_image_bottom_margin"
            android:baselineAlignBottom="true"
            android:src="@drawable/stb_select_error_device_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stb_select_error_phone_icon"
            android:layout_alignTop="@+id/paring_search_image"
            android:layout_toEndOf="@+id/paring_search_image" />

    </RelativeLayout>
    <TextView
        android:id="@+id/stb_select_status_error_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_stb_paring_result_layout"
        android:text="@string/str_stb_select_result_text_failed"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="@dimen/launch_text_size"
        android:layout_below="@+id/stb_icon_relative_layout"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/stb_paring_failed_help"
        android:layout_below="@id/stb_select_status_error_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/str_stb_search_failed_help"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/stb_search_failed_paring_again"
        android:layout_below="@id/stb_paring_failed_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/str_stb_search_failed_paring_again"
        android:textColor="#000000" />
    <CheckBox
        android:id="@+id/stb_select_error_checkBox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:text="@string/str_stb_next_not_display_text"
        android:textColor="#FFFFFF"
        android:theme="@style/CheckBox"
        android:layout_marginBottom="@dimen/launch_stb_checkbox_bottom_margin"
        android:layout_marginTop="@dimen/launch_stb_checkbox_top_margin"
        android:layout_above="@+id/use_without_paring"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/use_without_paring"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/str_stb_no_pair_use_text"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>