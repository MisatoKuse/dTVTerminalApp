<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_task_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
    android:layout_marginRight="@dimen/launch_stb_list_start_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/launch_stb_text_style"
        android:gravity="center"
        android:paddingStart="@dimen/stb_launch_padding_all"
        android:paddingEnd="@dimen/stb_launch_padding_all"
        android:paddingTop="@dimen/stb_launch_padding_all"
        android:paddingBottom="@dimen/stb_launch_title_margin_top"
        android:text="@string/launch_stb_select_dialog_title"
        android:textColor="@color/basic_text_color_black"
        android:textSize="@dimen/stb_launch_text_size" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_set_later"
            android:layout_marginTop="@dimen/stb_launch_btn_divider_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/launch_stb_button_style"
            android:text="@string/launch_stb_select_dialog_txt1"
            android:textSize="@dimen/stb_launch_text_size"
            android:textColor="@drawable/launch_text_color_style"/>
        <Button
            android:id="@+id/btn_paring_set_not_appear_next_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/stb_launch_btn_divider_margin_top"
            android:layout_gravity="center_vertical"
            android:background="@drawable/launch_stb_button_style"
            android:text="@string/launch_stb_select_dialog_txt2"
            android:textSize="@dimen/stb_launch_text_size"
            android:textColor="@drawable/launch_text_color_style" />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/stb_launch_btn_divider_margin_top"
            android:background="@drawable/launch_stb_button_bottom_corner"
            android:text="@string/launch_stb_select_dialog_txt3"
            android:textSize="@dimen/stb_launch_text_size"
            android:textColor="@drawable/launch_text_color_style" />
    </LinearLayout>
</LinearLayout>