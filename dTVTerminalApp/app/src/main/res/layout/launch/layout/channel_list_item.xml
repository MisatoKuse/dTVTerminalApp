<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_dark">

	<LinearLayout
		android:id="@+id/channel_list_item_thumb_ll"
		android:layout_width="48dp"
		android:layout_height="45dp"
		android:paddingBottom="9dp"
		android:paddingTop="9dp">

		<ImageView
			android:id="@+id/channel_list_item_thumb_iv"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="fitCenter"
			android:visibility="gone"/>
	</LinearLayout>

	<TextView
		android:id="@+id/channel_list_item_title_tv"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:layout_centerVertical="true"
		android:layout_marginStart="5dp"
		android:layout_toEndOf="@id/channel_list_item_thumb_ll"
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:maxLines="1"
		android:paddingStart="10dp"
		android:textColor="@android:color/white"
		android:textSize="15dp"/>

	<TextView
		android:id="@+id/channel_list_item_line"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_alignParentBottom="true"
		android:layout_alignStart="@id/channel_list_item_title_tv"
		android:background="@color/list_view_divider"/>

</RelativeLayout>