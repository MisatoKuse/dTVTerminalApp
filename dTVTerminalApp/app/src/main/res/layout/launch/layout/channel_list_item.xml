<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/common_background_color">

	<ImageView
		android:id="@+id/channel_list_item_thumb_iv"
		android:layout_width="@dimen/channel_list_thumbnail_width"
		android:layout_height="@dimen/channel_list_thumbnail_height"
		android:layout_marginEnd="@dimen/channel_list_thumbnail_margin_end"
		android:layout_marginStart="@dimen/channel_list_thumbnail_margin_start_top"
		android:layout_marginTop="@dimen/channel_list_thumbnail_margin_start_top"
		android:src="@mipmap/loading_ch_mini"
		android:visibility="gone" />

	<TextView
		android:id="@+id/channel_list_item_title_tv"
		android:layout_width="match_parent"
		android:layout_height="@dimen/channel_list_text_height"
		android:layout_centerVertical="true"
		android:layout_marginEnd="@dimen/channel_list_text_margin_end"
		android:layout_toEndOf="@id/channel_list_item_thumb_iv"
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:maxLines="2"
		android:textColor="@color/white_text"
		android:textSize="@dimen/channel_list_text_size" />

	<TextView
		android:id="@+id/channel_list_item_line"
		android:layout_width="match_parent"
		android:layout_height="@dimen/channel_list_divider_height"
		android:layout_marginStart="@dimen/channel_list_thumbnail_margin_start_top"
		android:layout_alignParentBottom="true"
		android:background="@color/list_view_divider" />

</RelativeLayout>