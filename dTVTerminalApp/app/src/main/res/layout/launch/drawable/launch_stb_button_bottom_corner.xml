<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/stb_launch_btn_all_corner_radius"
                android:bottomRightRadius="@dimen/stb_launch_btn_all_corner_radius">
            </corners>
            <solid android:color="@color/white_text" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/stb_launch_btn_all_corner_radius"
                android:bottomRightRadius="@dimen/stb_launch_btn_all_corner_radius">
            </corners>
            <solid android:color="@color/ranking_list_border" />
        </shape>
    </item>
</selector>