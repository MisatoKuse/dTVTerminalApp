<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
				android:background="#222222">

	<TextView
		android:id="@+id/tv_searched_result"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/search_result_count_text_margin_top"
		android:layout_marginBottom="@dimen/search_result_count_text_margin_buttom"
		android:layout_marginStart="@dimen/search_result_count_text_margin_left"
		android:layout_marginEnd="@dimen/search_result_count_text_margin_right"
		android:textColor="@android:color/white"
		android:textSize="@dimen/search_result_count_text_size"
		android:visibility="invisible" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="@dimen/search_result_list_border_height"
		android:layout_below="@+id/tv_searched_result"
		android:layout_marginLeft="@dimen/watch_listen_thumbnail_margin_left"
		android:background="@color/setting_list_divider_color"/>

	<TextView
		android:id="@+id/search_list_no_items"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/list_no_items_text_left"
		android:layout_marginTop="@dimen/list_no_items_text_top"
		android:layout_below="@+id/tv_searched_result"
		android:text="@string/common_empty_data_message"
		android:textColor="@color/white_text"
		android:textSize="@dimen/tab_text_size_14dp"
		android:visibility="gone" />

	<RelativeLayout
		android:id="@+id/lv_searched_progress"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clickable="true"
		android:visibility="gone">

		<ProgressBar
			android:id="@+id/base_progress"
			style="?android:attr/progressBarStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true" />
	</RelativeLayout>

	<ListView
		android:id="@+id/lv_searched_result"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/tv_searched_result"
		android:divider="@drawable/list_item_divider"
		android:dividerHeight="@dimen/search_result_list_border_height">
	</ListView>

	<!-- 201804対応
	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_marginBottom="30dp"
		android:layout_marginRight="30dp"/>
		-->

</RelativeLayout>