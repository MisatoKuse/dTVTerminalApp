<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contents_header_height_size"
    android:background="@color/contents_header_background">

    <TextView
        android:id="@+id/back_key"
        android:layout_width="@dimen/contents_back_key_size"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/back_key"
        android:textColor="@color/white_text"
        android:visibility="visible" />

    <TextView
        android:id="@+id/header_layout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white_text"
        android:textSize="@dimen/header_title_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/close_key"
        android:layout_width="@dimen/contents_close_key_size"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/close_key"
        android:textColor="@color/white_text"
        android:visibility="visible" />
</RelativeLayout>