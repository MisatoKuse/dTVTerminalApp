<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contents_header_height_size"
    android:background="@color/contents_header_background"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/back_key"
        android:layout_width="@dimen/contents_back_key_size"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/back_key"
        android:textColor="@color/white_text"
        android:textSize="@dimen/contents_header_back_button_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/header_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center_horizontal"
        android:textColor="@color/white_text"
        android:textSize="@dimen/header_title_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/close_key"
        android:layout_width="@dimen/contents_close_key_size"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/close_key"
        android:textColor="@color/white_text"
        android:textSize="@dimen/contents_header_close_button_size"
        android:textStyle="bold" />
</LinearLayout>