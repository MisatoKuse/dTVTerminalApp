<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/default_layout_style"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- コンテンツ詳細用のヘッダ を読み込む -->
    <RelativeLayout
        android:id="@+id/contents_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/contents_detail_header_layout" />
    </RelativeLayout>

    <!--コンテンツ詳細のスクロール部分-->
    <ScrollView
        android:id="@+id/contents_detail_scroll_view"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/contents_detail_scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--サムネイル用レイアウト-->
            <RelativeLayout
                android:id="@+id/dtv_contents_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--サムネイル画像-->
                <ImageView
                    android:id="@+id/dtv_contents_detail_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/contents_info_thumbnail_text"
                    android:scaleType="fitXY"
                    android:src="@mipmap/loading" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <!--中央ボタン画像-->
                    <ImageView
                        android:id="@+id/dtv_contents_view_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/contents_info_thumbnail_button"
                        android:src="@mipmap/ic_launcher" />

                    <!--テキスト-->
                    <TextView
                        android:id="@+id/view_contents_button_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/white_text" />
                </LinearLayout>
            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/contents_detail_tab_strip_scroll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/contents_detail_tabs_height"
                android:layout_marginBottom="@dimen/contents_text_vertical_margin"
                android:layout_marginTop="@dimen/contents_text_vertical_margin"
                android:background="@android:color/background_dark"
                android:fillViewport="true"
                android:foregroundGravity="center_horizontal"
                android:scrollbars="none" />

            <com.nttdocomo.android.tvterminalapp.view.ContentsDetailViewPager
                android:id="@+id/contents_detail_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
