<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dtv_contents_detail_main_layout_ll"
    style="@style/default_layout_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/contents_detail_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/contents_detail_scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--サムネイル用レイアウト-->
            <RelativeLayout
                android:id="@+id/dtv_contents_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/dtv_contents_detail_main_layout_player_rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.digion.dixim.android.secureplayer.SecureVideoView
                        android:id="@+id/dtv_contents_detail_main_layout_player_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_player_main_layout_video_ctrl_player_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp"
                        android:text=""
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@android:color/white"/>

                    <ImageView
                        android:id="@+id/tv_player_main_layout_video_ctrl_player_logo"
                        android:layout_width="48dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="26dp"
                        android:background="@android:color/transparent"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/dtv_contents_detail_main_layout_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contents_info_thumbnail_text"
                    android:scaleType="fitCenter" />

                <LinearLayout
                    android:id="@+id/dtv_contents_detail_main_layout_thumbnail_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <!--中央ボタン画像-->
                    <ImageView
                        android:id="@+id/dtv_contents_view_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/contents_info_thumbnail_button"
                        android:src="@mipmap/ic_play_arrow_white_24dp" />
                    <!--テキスト-->
                    <TextView
                        android:id="@+id/view_contents_button_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white_text"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/contents_detail_16dp"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_dtv_contents_detail_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_layout_area_height"
                android:background="@color/dtv_contents_detail_tab_background_color"
                android:visibility="visible" />

            <com.nttdocomo.android.tvterminalapp.view.ContentsDetailViewPager
                android:id="@+id/dtv_contents_detail_main_layout_vp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
