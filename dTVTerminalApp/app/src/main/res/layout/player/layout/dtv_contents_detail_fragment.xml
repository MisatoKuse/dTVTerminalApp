<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/contents_tab_side_margin"
    android:paddingRight="@dimen/contents_tab_side_margin"
    android:paddingTop="@dimen/contents_tab_top_margin">

    <TextView
        android:id="@+id/service_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/contents_provider_shape_corner"
        android:textColor="@color/white_text" />

    <TextView
        android:id="@+id/contents_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/service_provider"
        android:layout_below="@+id/service_provider"
        android:textColor="@color/white_text" />

    <LinearLayout
        android:id="@+id/contents_detail_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/contents_title"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contents_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/white_text" />

        <TextView
            android:id="@+id/more_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="end"
            android:text="@string/contents_info_more_text"
            android:textColor="@color/white_text" />
    </LinearLayout>
</RelativeLayout>