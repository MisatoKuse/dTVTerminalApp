<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/contents_tab_side_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/contents_tab_side_margin">

        <TextView
            android:id="@+id/dtv_contents_detail_fragment_service_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/contents_provider_shape_corner_blue"
            android:paddingLeft="@dimen/contents_service_name_side_margin"
            android:paddingRight="@dimen/contents_service_name_side_margin"
            android:textColor="@color/white_text" />

        <TextView
            android:id="@+id/dtv_contents_detail_fragment_contents_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/contents_text_vertical_margin"
            android:textColor="@color/white_text"
            android:textSize="@dimen/header_title_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/dtv_content_detial_fragment_detail_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/contents_detail_8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dtv_contents_detail_fragment_channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/dtv_contents_detail_fragment_channel_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/contents_detail_5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/dtv_contents_detail_fragment_caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/contents_provider_shape_corner_dark_gray"
                        android:paddingEnd="@dimen/contents_detail_5dp"
                        android:paddingStart="@dimen/contents_detail_5dp"
                        android:text="字幕"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/dtv_contents_detail_fragment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/contents_detail_5dp"
                        android:layout_toRightOf="@id/dtv_contents_detail_fragment_caption"
                        android:background="@drawable/contents_provider_shape_corner_dark_gray"
                        android:paddingEnd="@dimen/contents_detail_8dp"
                        android:paddingStart="@dimen/contents_detail_8dp"
                        android:text="5.1"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/dtv_contents_detail_fragment_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/contents_detail_5dp"
                        android:layout_toRightOf="@id/dtv_contents_detail_fragment_text"
                        android:background="@drawable/contents_provider_shape_corner"
                        android:paddingEnd="@dimen/contents_detail_2dp"
                        android:paddingStart="@dimen/contents_detail_2dp"
                        android:text="PG 12"
                        android:textColor="@android:color/white" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/contents_detail_5dp"
                android:layout_toEndOf="@id/dtv_content_detial_fragment_detail_area"
                android:layout_centerVertical="true">

                <ImageButton
                    android:id="@+id/dtv_contents_detail_fragment_rec_iv"
                    android:layout_width="@dimen/contents_detail_icon_size"
                    android:layout_height="@dimen/contents_detail_icon_size"
                    android:scaleType="fitXY"
                    android:background="@android:color/black"
                    android:layout_marginRight="@dimen/contents_detail_icon_margin"
                    android:layout_toStartOf="@+id/contents_detail_clip_button"
                    android:src="@drawable/recording_reservation_rec_icon_selector"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/contents_detail_clip_button"
                    android:layout_width="@dimen/contents_detail_clip_size"
                    android:layout_height="@dimen/contents_detail_clip_size"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:src="@mipmap/icon_circle_opacity_clip" />

            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/dtv_contents_detail_fragment_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/contents_text_info_margin"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/white_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dtv_contents_detail_fragment_all_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/contents_text_info_margin"
            android:textColor="@color/white_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dtv_contents_detail_fragment_more_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="end"
            android:text="@string/contents_info_more_text"
            android:textColor="@color/white_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dtv_contents_detail_fragment_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dtv_contents_detail_fragment_staff_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/contents_detail_8dp"
            android:text="@string/contents_detail_tv_staff"
            android:textColor="@color/white_text"
            android:textSize="@dimen/contents_detail_16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dtv_contents_detail_fragment_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dtv_contents_detail_fragment_recommend_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/contents_detail_16dp"
            android:text="@string/contents_detail_tv_staff_recommend"
            android:textColor="@color/white_text"
            android:textSize="@dimen/contents_detail_16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/dtv_contents_detail_fragment_recommend_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/contents_detail_10dp"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>