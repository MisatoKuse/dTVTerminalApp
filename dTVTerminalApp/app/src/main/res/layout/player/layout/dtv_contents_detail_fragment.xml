<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/contents_tab_left_margin"
    android:paddingTop="@dimen/contents_tab_top_margin">

    <TextView
        android:id="@+id/service_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/contents_provider_shape_corner"
        android:text="TextView" />

    <TextView
        android:id="@+id/contents_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/service_provider"
        android:layout_below="@+id/service_provider"
        android:text="TextView" />

    <TextView
        android:id="@+id/contents_detail_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/contents_title"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="TextView" />

    <TextView
        android:id="@+id/more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contents_title"
        android:layout_toEndOf="@+id/contents_detail_info"
        android:clickable="true"
        android:text="@string/contents_info_more_text" />
</RelativeLayout>