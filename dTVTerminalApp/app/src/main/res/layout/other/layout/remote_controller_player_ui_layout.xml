<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/remote_controller_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/remote_controller_bt_record_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/remote_controller_round_style"
            android:text="@string/remote_controller_viewpager_record_list_button" />

        <Button
            android:id="@+id/remote_controller_bt_tv_program"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:background="@drawable/remote_controller_round_style"
            android:text="@string/remote_controller_viewpager_program_list_button" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/remote_controller_rl_home_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/remote_controller_bt_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/remote_controller_round_style"
                android:text="@string/remote_controller_viewpager_back_button" />

            <Button
                android:id="@+id/remote_controller_bt_toHome"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="30dp"
                android:background="@drawable/remote_controller_round_style"
                android:text="@string/remote_controller_viewpager_home_button" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/remote_controller_ll_play_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remote_controller_rl_home_back"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/remote_controller_iv_playOrStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/play_stop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remote_controller_ll_play_stop"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/remote_controller_iv_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/blue" />

            <ImageView
                android:id="@+id/remote_controller_iv_red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/remote_controller_iv_blue"
                android:layout_weight="1"
                android:src="@drawable/red" />

            <ImageView
                android:id="@+id/remote_controller_iv_green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/remote_controller_iv_red"
                android:layout_weight="1"
                android:src="@drawable/green" />

            <ImageView
                android:id="@+id/remote_controller_iv_yellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/remote_controller_iv_green"
                android:layout_weight="1"
                android:src="@drawable/yellow" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remote_controller_rl_round"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:layout_below="@+id/remote_controller_rl">

        <Button
            android:id="@+id/remote_controller_out_round_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/remote_controller_play_out_round_style" />


        <Button
            android:id="@+id/remote_controller_bt_decide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/remote_controller_play_in_round_style"
            android:text="@string/remote_controller_viewpager_decide_button"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/remote_controller_bt_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/remote_controller_bt_decide"
            android:background="#00000000"
            android:text="@string/remote_controller_viewpager_left_button"
            android:textSize="25dp" />

        <Button
            android:id="@+id/remote_controller_bt_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/remote_controller_bt_decide"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:text="@string/remote_controller_viewpager_up_button"
            android:textSize="25dp" />

        <Button
            android:id="@+id/remote_controller_bt_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/remote_controller_bt_decide"
            android:background="#00000000"
            android:text="@string/remote_controller_viewpager_right_button"
            android:textSize="25dp" />

        <Button
            android:id="@+id/remote_controller_bt_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/remote_controller_bt_decide"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:text="@string/remote_controller_viewpager_down_button"
            android:textSize="25dp" />
    </RelativeLayout>


</RelativeLayout>