<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:visibility_height="100dp"
    >
    <com.nttdocomo.android.tvterminalapp.view.RemoteControllerView
        android:id="@+id/msv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        >
        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/color_white"
            android:orientation="vertical"
            >
            <FrameLayout
                android:id="@+id/header_watch_by_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0099ff">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/power"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/color_little_gray"
                    android:layout_marginEnd="0dp"
                    android:visibility="gone"
                    android:id="@+id/remote_controller_iv_power"/>
                <TextView
                    android:id="@+id/watch_by_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/remote_controller_viewpager_watch_by_tv"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/remote_controller_down"
                    android:id="@+id/remote_controller_down"
                    />
            </FrameLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/remokon_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                >
            </android.support.v4.view.ViewPager>
        </LinearLayout>

    </com.nttdocomo.android.tvterminalapp.view.RemoteControllerView>

</RelativeLayout>