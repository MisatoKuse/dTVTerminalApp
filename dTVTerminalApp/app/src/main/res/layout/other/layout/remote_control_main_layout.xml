<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/watch_by_tv_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.nttdocomo.android.tvterminalapp.view.RemoteControllerView
        android:id="@+id/remote_control_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/header_watch_by_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/remote_watch_by_tv_bottom_corner">

                    <LinearLayout
                        android:id="@+id/bottom_view_ll"
                        android:layout_width="match_parent"
                        android:layout_height="489dp"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/remote_tv_play_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/ic_remote_tv_play" />

                        <TextView
                            android:id="@+id/watch_by_tv"
                            android:layout_width="122dp"
                            android:layout_height="484dp"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="16dp"
                            android:text="@string/remote_controller_viewpager_watch_by_tv"
                            android:textColor="#ffffff"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/remote_controller_down"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="117dp"
                            android:layout_marginTop="13dp"
                            android:src="@mipmap/remote_controller_arrow_top" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/top_view_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:weightSum="641">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="16" />

                        <LinearLayout
                            android:layout_width="359dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal"
                            android:weightSum="359">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="16" />

                            <ImageButton
                                android:id="@+id/remote_controller_iv_power"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="52"
                                android:background="@drawable/color_little_gray"
                                android:src="@mipmap/remote_tap_ch_power" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="245" />

                            <Button
                                android:id="@+id/remote_controller_close"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/remocon_close_selector" />
                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/color_little_gray">
                </FrameLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@drawable/remote_viewpager_bottom_corner"
                android:orientation="vertical">
                <android.support.v4.view.ViewPager
                    android:id="@+id/remocon_viewpager"
                    android:layout_width="359dp"
                    android:layout_height="561dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/remocon_bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_above="@id/remocon_bottom"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="169" />

                    <LinearLayout
                        android:id="@+id/remocon_index"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="22"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/remote_material_paging_current"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/remote_material_paging_normal"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="168" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.nttdocomo.android.tvterminalapp.view.RemoteControllerView>
</FrameLayout>