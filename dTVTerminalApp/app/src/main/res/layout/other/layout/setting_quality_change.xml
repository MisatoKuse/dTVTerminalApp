<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/setting_background_color_black">

    <RelativeLayout
        android:id="@+id/main_setting_relativelayout_quality_high"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_setting_list_height"
        android:clickable="true">
        <TextView
            android:id="@+id/main_setting_quality_text_high"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_setting_list_height"
            android:layout_marginStart="@dimen/main_setting_text_start_margin"
            android:gravity="center_vertical"
            android:text="@string/main_setting_image_quality_high"
            android:textColor="@color/white_text"
            android:textSize="@dimen/main_setting_list_item_textsize" />
        <CheckBox
            android:id="@+id/main_setting_quality_checkbox_high"
            android:button="@null"
            android:background="@drawable/setting_checkbox"
            android:layout_width="@dimen/main_setting_list_checkbox_length"
            android:layout_height="@dimen/main_setting_list_checkbox_length"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/main_setting_checkbox_margin"
            android:layout_marginEnd="@dimen/main_setting_checkbox_margin"
            android:clickable="false" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/main_setting_text_start_margin"
        android:layout_height="@dimen/main_setting_quality_list_separate"
        android:background="@color/setting_list_divider_color" />

    <RelativeLayout
        android:id="@+id/main_setting_relativelayout_quality_middle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_setting_list_height"
        android:clickable="true">
        <TextView
            android:id="@+id/main_setting_quality_text_middle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_setting_list_height"
            android:layout_marginStart="@dimen/main_setting_text_start_margin"
            android:gravity="center_vertical"
            android:text="@string/main_setting_image_quality_middle"
            android:textColor="@color/white_text"
            android:textSize="@dimen/main_setting_list_item_textsize" />
        <CheckBox
            android:id="@+id/main_setting_quality_checkbox_middle"
            android:button="@null"
            android:background="@drawable/setting_checkbox"
            android:layout_width="@dimen/main_setting_list_checkbox_length"
            android:layout_height="@dimen/main_setting_list_checkbox_length"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/main_setting_checkbox_margin"
            android:layout_marginEnd="@dimen/main_setting_checkbox_margin"
            android:clickable="false" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/main_setting_text_start_margin"
        android:layout_height="@dimen/main_setting_quality_list_separate"
        android:background="@color/setting_list_divider_color" />

    <RelativeLayout
        android:id="@+id/main_setting_relativelayout_quality_low"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_setting_list_height"
        android:clickable="true">
        <TextView
            android:id="@+id/main_setting_quality_text_low"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_setting_list_height"
            android:layout_marginStart="@dimen/main_setting_text_start_margin"
            android:gravity="center_vertical"
            android:text="@string/main_setting_image_quality_low"
            android:textColor="@color/white_text"
            android:textSize="@dimen/main_setting_list_item_textsize" />
        <CheckBox
            android:id="@+id/main_setting_quality_checkbox_low"
            android:button="@null"
            android:background="@drawable/setting_checkbox"
            android:layout_width="@dimen/main_setting_list_checkbox_length"
            android:layout_height="@dimen/main_setting_list_checkbox_length"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/main_setting_checkbox_margin"
            android:layout_marginEnd="@dimen/main_setting_checkbox_margin"
            android:clickable="false" />
        </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/main_setting_text_start_margin"
        android:layout_height="@dimen/main_setting_quality_list_separate"
        android:background="@color/setting_list_divider_color" />

</LinearLayout>
