<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/main_setting_list_height"
    android:background="@color/setting_list_background_color">
    <ImageView
        android:id="@+id/setting_forward_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/main_setting_view_margin"
        android:src="@mipmap/icon_normal_arrow_right"
        android:contentDescription="@null"/>
    <TextView
        android:id="@+id/setting_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/setting_forward_image"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/main_setting_text_end_margin"
        android:textAlignment="textEnd"
        android:textSize="@dimen/main_setting_list_status_textsize"
        android:textColor="@color/white_text"/>
    <TextView
        android:id="@+id/setting_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/setting_state_text"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/main_setting_text_start_margin"
        android:textSize="@dimen/main_setting_list_item_textsize"
        android:textColor="@color/white_text"
        android:maxLines="1"
        android:ellipsize="end"/>
</RelativeLayout>