<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/genre_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/video_contents_genre_title_margin_start"
        android:layout_marginTop="@dimen/video_contents_genre_title_margin_top"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="@dimen/video_contents_genre_text_size"
        android:textColor="@color/video_list_text" />

    <TextView
        android:id="@+id/content_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/video_contents_genre_count_margin_end"
        android:layout_toLeftOf="@+id/genre_button"
        android:textSize="@dimen/video_contents_genre_num_size"
        android:textColor="@color/video_list_text" />

    <TextView
        android:id="@+id/genre_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/video_contents_genre_button_margin_end"
        android:text="@string/list_transition"
        android:textSize="@dimen/video_contents_genre_num_size"
        android:textColor="@color/video_list_text" />

    <TextView
        android:id="@+id/item_common_result_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/video_list_text" />

</RelativeLayout>