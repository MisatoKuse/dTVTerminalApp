<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/default_layout_style"
    android:orientation="vertical"
    android:background="@color/common_background_color">

    <RelativeLayout
        android:id="@+id/rl_weekly_ranking_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_layout_area_height"
        android:visibility="visible" />

    <TextView
        android:id="@+id/weekly_ranking_no_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_no_items_text_left"
        android:layout_marginTop="@dimen/list_no_items_text_top"
        android:textColor="@color/white_text"
        android:textSize="@dimen/tab_text_size_14dp"
        android:text="@string/common_empty_data_message"
        android:visibility="gone"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_weekly_ranking_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
