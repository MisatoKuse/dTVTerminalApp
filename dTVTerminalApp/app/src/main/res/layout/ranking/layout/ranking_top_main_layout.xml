<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/default_layout_style"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/home_main_layout_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FF0000">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ランキング(トップ)"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="コンテンツ詳細"
        android:onClick="contentsDetailButton"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/daily_tv_ranking_title"
        android:onClick="dailyRankingButton"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weekly_tv_ranking_title"
        android:onClick="weeklyTvRankingButton"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/video_ranking_title"
        android:onClick="videoRankingButton"/>
</LinearLayout>
