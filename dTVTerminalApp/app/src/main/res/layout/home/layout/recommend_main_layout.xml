<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_tab_background_color">

    <RelativeLayout
        android:id="@+id/rl_recommend_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_layout_area_height"
        android:background="@color/common_tab_background_color"
        android:visibility="visible" />

    <TextView
        android:id="@+id/recommend_list_no_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_no_items_text_left"
        android:layout_marginTop="@dimen/list_no_items_text_top"
        android:textColor="@color/white_text"
        android:textSize="@dimen/tab_text_size_14dp"
        android:text="@string/common_empty_data_message"
        android:visibility="gone"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_recommend_list_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"/>

</LinearLayout>