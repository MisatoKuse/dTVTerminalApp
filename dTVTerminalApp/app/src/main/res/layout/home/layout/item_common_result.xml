<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/item_common_result_thumbnail_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_common_result_thumbnail_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@color/thumbnail_background"
            android:contentDescription="@null"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/item_common_result_rank_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/recorded_rank_num_margin_start"
            android:layout_marginTop="@dimen/list_item_common_result_rank_num_top_margin"
            android:background="@drawable/rank_shape_corner"
            android:gravity="center"
            android:paddingStart="@dimen/recorded_rank_num_left_padding"
            android:paddingEnd="@dimen/list_item_common_result_rank_num_right_padding"
            android:textColor="@color/white_text"
            android:textSize="@dimen/list_item_rank_num_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_common_result_show_status_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/item_common_result_clip_tv"
            android:layout_width="@dimen/clip_button_size"
            android:layout_height="@dimen/clip_button_size"
            android:layout_marginEnd="@dimen/recorded_clip_tv_margin_end"
            android:clickable="true"
            android:background="@color/list_item_background" />

        <TextView
            android:id="@+id/item_common_result_recording_reservation_status"
            android:layout_width="@dimen/recording_reservation_list_status_width"
            android:layout_height="@dimen/recording_reservation_list_status_height"
            android:layout_marginEnd="@dimen/recording_reservation_list_status_margin_end"
            android:background="@color/list_item_background"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="@dimen/list_item_recording_reservation_status_text_size"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_common_result_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/list_item_result_contents_margin_end"
        android:layout_marginStart="@dimen/list_item_result_contents_margin_start"
        android:layout_toEndOf="@id/item_common_result_thumbnail_rl"
        android:layout_toStartOf="@id/item_common_result_show_status_area"
        android:orientation="vertical"
        android:paddingBottom="@dimen/list_item_result_contents_bottom_padding"
        android:paddingTop="@dimen/list_item_result_contents_top_padding">

        <TextView
            android:id="@+id/item_common_result_channel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/recording_reservation_status_background_black"
            android:textColor="@color/white_text"
            android:textSize="@dimen/list_item_channel_name_text_size"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_common_result_content_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/content_time_text"
                android:textSize="@dimen/list_item_time_text_size" />

            <TextView
                android:id="@+id/item_common_result_recorded_content_hyphen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/list_item_time_start_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/contents_hyphen"
                android:textColor="@color/content_time_text"
                android:textSize="@dimen/list_item_time_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_common_result_recorded_content_channel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/list_item_time_start_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/content_time_text"
                android:textSize="@dimen/list_item_time_text_size"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_common_result_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white_text"
            android:textSize="@dimen/list_item_title_text_size" />

        <LinearLayout
            android:id="@+id/item_common_result_content_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/item_common_result_content_rating_star"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/item_common_result_content_rating_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/list_item_rank_num_start_margin"
                android:textColor="@color/white_text"
                android:textSize="@dimen/list_item_rating_num_text_size" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_common_result_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#222222" />
    <TextView
        android:id="@+id/item_common_result_device_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launch_text_layout_high_size"
        android:gravity="center_vertical|start"
        android:background="@drawable/selector_btn_click_bg"
        android:textColor="@drawable/selector_text_click_bg"
        android:layout_marginRight="@dimen/launch_stb_list_start_margin"
        android:layout_marginLeft="@dimen/launch_stb_list_start_margin"
        android:layout_marginBottom="@dimen/launch_text_bottom_margin"
        android:visibility="gone"
        android:paddingStart="@dimen/launch_text_left_padding"
        android:paddingEnd="@dimen/launch_text_right_padding"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="bottom|end">

        <ImageView
            android:id="@+id/item_common_result_sort_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="25dp"
            android:contentDescription="@null"
            android:scaleType="center" />
    </LinearLayout>
</RelativeLayout>