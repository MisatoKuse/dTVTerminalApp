<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/wl_thumbnail"
        android:layout_width="@dimen/watch_listen_thumbnail_high"
        android:layout_height="@dimen/watch_listen_thumbnail_width"
        android:layout_marginStart="@dimen/watch_listen_thumbnail_margin_left"
        android:layout_marginTop="@dimen/watch_listen_thumbnail_margin_top_bottom"
        android:layout_marginBottom="@dimen/watch_listen_thumbnail_margin_top_bottom"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/wl_clip"
        android:layout_width="@dimen/clip_button_size"
        android:layout_height="@dimen/clip_button_size"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/clip_common_margin_left"
        android:layout_marginEnd="@dimen/clip_common_margin_right"
        android:src="@mipmap/icon_circle_opacity_clip"
        android:layout_alignParentEnd="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/watch_listen_thumbnail_margin_left"
        android:layout_toEndOf="@id/wl_thumbnail"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/wl_clip"
        android:id="@+id/watch_listen_title_relativeLayout">

        <TextView
            android:id="@+id/wl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:gravity="center|start"
            android:textSize="@dimen/list_item_title_text_size"
            android:textColor="@android:color/white" />

        <RatingBar
            android:id="@+id/wl_video_rating"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:foregroundGravity="center"
            android:layout_marginTop="@dimen/watch_listen_rating_margin_top"
            android:layout_below="@+id/wl_title"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/wl_rating_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wl_title"
            android:layout_toEndOf="@+id/wl_video_rating"
            android:layout_marginTop="@dimen/watch_listen_rating_margin_top"
            android:layout_marginStart="@dimen/watch_listen_text_margin_left"
            android:textColor="@android:color/white"
            android:textSize="@dimen/watch_listen_text_size"/>
    </RelativeLayout>
</RelativeLayout>
