<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:descendantFocusability="blocksDescendants">

        <ImageView
            android:id="@+id/iv_clip_video_thumbnail"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/loading"/>

        <Button
            android:id="@+id/bt_video_clip"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/white"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_clip_video_thumbnail"
            android:layout_alignTop="@id/iv_clip_video_thumbnail"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@id/bt_video_clip"
            android:layout_toRightOf="@id/iv_clip_video_thumbnail"
            >

            <RatingBar
                android:id="@+id/rb_clip_video_rating"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:numStars="5"
                android:paddingBottom="5dp"
                android:rating="3.5"/>

            <TextView
                android:id="@+id/rb_clip_video_rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/rb_clip_video_rating"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@id/rb_clip_video_rating"
                android:layout_toRightOf="@id/rb_clip_video_rating"
                android:text="3.5"
                android:textColor="@android:color/white"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/tv_clip_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/rb_clip_video_rating"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@android:color/white"
                android:text="プリズン・ブレイクシーズン1第1話マイケルブレイクシーズン1第1話"/>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>