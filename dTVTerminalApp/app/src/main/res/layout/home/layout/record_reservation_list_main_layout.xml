<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/contents_detail_16dp"
        android:layout_marginEnd="@dimen/contents_detail_16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/record_reservation_list_update_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:textSize="@dimen/list_item_time_text_size"
            android:textColor="@color/content_time_text"/>
    </RelativeLayout>
    <View
        android:id="@+id/record_reservation_list_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/record_reservation_list_update_time"
        android:background="@color/result_line"/>
    <ListView
        android:id="@+id/record_reservation_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/record_reservation_list_border">
    </ListView>

</LinearLayout>