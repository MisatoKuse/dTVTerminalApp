<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <RelativeLayout
        android:id="@+id/home_main_layout_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FF0000">
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/home_main_layout_title_menu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:text="..."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/home_main_layout_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ホーム"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/home_main_layout_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="70dp">
                <TextView
                    android:id="@+id/home_main_layout_kytv"
                    android:layout_alignParentRight="true"
                    android:text="契約する"
                    android:textColor="#FFFFFF"
                    android:background="#FF0000"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
                <TextView
                    android:layout_toLeftOf="@id/home_main_layout_kytv"
                    android:textColor="#000000"
                    android:maxLines="2"
                    android:text="ご利用中のdアカウントでひかりTV for docomoの契約がありません。"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/home_main_layout_prrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@mipmap/home_pr"/>
                <TextView
                    android:textSize="30sp"
                    android:textColor="#0000FF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>