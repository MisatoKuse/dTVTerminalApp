<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_clip_list_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_layout_area_height"
        android:background="@color/common_tab_background_color"
        android:visibility="visible" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_clip_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_clip_list_tab" />
</RelativeLayout>
