<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_clip_list_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_layout_area_height"
        android:background="@color/common_tab_background_color"
        android:visibility="visible" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_clip_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_clip_list_tab" />

    <TextView
        android:id="@+id/clip_list_no_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/search_tab_margin_left"
        android:layout_below="@+id/rl_clip_list_tab"
        android:textColor="@color/white_text"
        android:textSize="@dimen/tab_text_size_14dp"
        android:text="@string/str_clip_list_no_content"
        android:visibility="gone"/>

</RelativeLayout>
