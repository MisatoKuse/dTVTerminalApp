<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_main_background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/home_main_item_type_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/home_contents_left_margin"
        android:layout_marginEnd="@dimen/home_contents_right_margin"
        android:layout_marginTop="@dimen/home_contents_item_name_top_margin"
        android:layout_marginBottom="@dimen/home_contents_item_name_bottom_margin">

        <TextView
            android:id="@+id/home_main_item_type_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/home_contents_item_name_text_size"
            android:textColor="@color/home_item_name_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home_main_item_type_tx_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/home_main_item_right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/home_contents_item_num_right_margin"
            android:textSize="@dimen/home_contents_item_num_text_size"
            android:textColor="@color/home_item_contents_num_text_color" />

        <ImageView
            android:id="@+id/home_main_item_right_arrow"
            android:layout_width="@dimen/home_contents_item_right_arrow_size"
            android:layout_height="@dimen/home_contents_item_right_arrow_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_gray_arrow_right" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_main_item_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_contents_thumbnail_height"
        />
</LinearLayout>