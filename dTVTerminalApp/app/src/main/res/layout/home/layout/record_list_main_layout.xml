<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_tab_background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_recorded_list_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_layout_area_height"
        android:background="@color/common_tab_background_color"
        android:visibility="visible" />

    <TextView
        android:id="@+id/recorded_list_no_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_no_items_text_left"
        android:layout_marginTop="@dimen/list_no_items_text_top"
        android:textColor="@color/white_text"
        android:background="@color/common_tab_background_color"
        android:textSize="@dimen/tab_text_size_14dp"
        android:text="@string/common_empty_data_message"
        android:visibility="gone"/>

    <!-- 検索結果画面 -->
    <RelativeLayout
        android:id="@+id/record_list_main_layout_result"
        android:background="@color/recorded_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/record_list_main_layout_viewpagger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:id="@+id/record_list_main_layout_progress_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:gravity="center">
            <ProgressBar
                android:id="@+id/record_list_main_layout_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/record_list_main_layout_loading_word_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:maxLines="2"
                android:textSize="@dimen/recorded_contents_text_size_14"
                android:textStyle="bold"
                android:textColor="@color/white_text"
                android:text="@string/record_list_loading_message"
                android:visibility="gone"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>