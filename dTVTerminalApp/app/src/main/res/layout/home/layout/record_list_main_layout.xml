<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recorded_background"
    android:orientation="vertical">

    <android.support.v7.widget.SearchView
        android:id="@+id/record_list_main_layout_searchview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recorded_searchview_height"
        android:layout_marginBottom="@dimen/recorded_searchview_bottom_margin"
        android:layout_marginLeft="@dimen/recorded_searchview_left_margin"
        android:layout_marginRight="@dimen/recorded_searchview_right_margin"
        android:layout_marginTop="@dimen/recorded_searchview_top_margin"
        android:background="@color/keyword_search_background" />

    <!-- 検索結果画面 -->
    <RelativeLayout
        android:id="@+id/record_list_main_layout_result"
        android:background="@color/recorded_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/record_list_main_layout_scroll"
            style="@style/tabTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recorded_scroll_height"
            android:fillViewport="true"
            android:foregroundGravity="center_horizontal"
            android:scrollbars="none" />

        <ProgressBar
            android:id="@+id/record_list_main_layout_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/record_list_main_layout_scroll"
            android:layout_centerHorizontal="true" />

        <android.support.v4.view.ViewPager
            android:id="@+id/record_list_main_layout_viewpagger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/record_list_main_layout_progress"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <!-- 仕様通りに表示させるため、一時↓のように構成
        <com.nttdocomo.android.tvterminalapp.view.ChangeModeActionButton
            android:id="@+id/recorded_List_filtering_layout_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|end">

            <ImageView
                android:id="@+id/recorded_List_filtering_layout_image"
                android:layout_width="@dimen/recorded_filtering_icon_width"
                android:layout_height="@dimen/recorded_filtering_icon_height"
                android:layout_marginBottom="@dimen/recorded_filtering_icon_margin_bottom"
                android:layout_marginEnd="@dimen/recorded_filtering_icon_margin_end"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_fiber_manual_record_white_24dp"/>

        </com.nttdocomo.android.tvterminalapp.view.ChangeModeActionButton>-->
    </RelativeLayout>
</LinearLayout>