<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AnimationRightFade">
        <item name="android:windowEnterAnimation">@anim/in_righttoleft</item>
        <item name="android:windowExitAnimation">@anim/out_lefttoright</item>
    </style>

    <style name="default_layout_style">
        <item name="android:background">#000000</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="autoscroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <!--検索画面アイテムRatingBar -->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/video_item_ratingbar</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>
    <!--Activity遷移時トランザクションをなくす -->
    <style name="STBTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <!--ビデオランキングRatingBar -->
    <style name="ranking_ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/video_item_ratingbar</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

    <!--コンテンツ詳細-->
    <style name="ContentsDetailTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/contents_header_background</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

	<!--TvPlayerActivity-->
    <style name="DiximPlayerPanelTheme" parent="@android:style/Theme.Holo.Light.Panel" />
    <!--タブUI共通-->
    <style name="tabTextView">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/list_item_background</item>
        <item name="android:textSize">@dimen/list_item_title_text_size</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/recorded_scroll_top_margin</item>
    </style>

    <!--Launch画面-->
    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <!-- 枠線 -->
        <item name="colorControlNormal">@color/white_text</item>
        <!-- チェック時の色 -->
        <item name="colorControlActivated">@color/white_text</item>
    </style>

