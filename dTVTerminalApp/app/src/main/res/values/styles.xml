        <item name="android:textAlignment">center</item>
        <item name="android:listDividerAlertDialog">@drawable/path_1x</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textSize">@dimen/recording_reservation_dialog_item_text_size</item>
    </style>
